@model WebStore.Models.LoginViewModel


<div class="container bg-info">
    <h3 class="text-center ">Login</h3>
    <p>Indtast dit brugernavn for at logge ind</p>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(c => c.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div>
            @Html.EditorFor(c => c.UserName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Login" />
            </div>
        </div>
    }
    <p class="alert-danger">@Model.ErrorMessage</p>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
